doctype html
html(lang='en')
  head
    title Starter Template for Bootstrap
    // Bootstrap core CSS
    link(href='/vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/stylesheets/dashboard.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') Portfolio
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/admin')
              | Dashboard 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/admin/new') Add Project
          li.nav-item
            a.nav-link.disabled(href='/') Visit Site
    .container
      != messages
      block content
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src='/vendor/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/dashboard.js')
